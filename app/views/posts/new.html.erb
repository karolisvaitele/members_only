<h1>Create post</h1>
<div>
  <div>
    <%= form_for @post do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.label :title %><br>
      <%= f.text_field :title %><br>

      <%= f.label :body %><br>
      <%= f.text_area :body %><br>

      <%= f.submit "Create post" %>
    <% end %>

  </div>
</div>